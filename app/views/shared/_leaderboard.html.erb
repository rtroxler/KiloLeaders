<%
    lift_name ||= "snatch"
%>
<div class="row">
<h3>PR LeaderBoard -
<%= select_tag "lifts", options_for_select(@lifts, "snatch"), :class => 'lift-selector' %>
</h3>
</div>
<table class="table table-striped">
<thead>
  <tr>
    <th>Rank</th>
    <th>User</th>
    <th>Weight</th>
    <th>Reps</th>
  </tr>
</thead>
<tbody>
  <% @leaderboard.each.with_index(1) do |user, idx| %>
    <% lift = user.pr_lifts.where(name: lift_name).first %>
    <tr>
      <td><%= idx %></td>
      <td><%= user.name %></td>
      <td><%= lift.weight %> kg</td>
      <td><%= lift.reps %> </td>
    </tr>
  <% end %>
</tbody>
</table>

